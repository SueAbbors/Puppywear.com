<div id="checkout">
  <h2>Checkout for Shopping Cart</h2>
  
  <h3>Items</h3>
  <% @cart_items.each do |item| %>
  <ul>
    <% if item.image.present? %>
    <li></li><%= image_tag item.image.medium.url %></li>
    <% end %>
  <li><%= item.title %></li>
 <li><%= item.description %></li> 
 <li><%= number_to_currency item.price %></li> 
  </ul>
<% end %>
<h2>Customer Order</h2>
<%= form_tag create_path, :authenticity_token => true do %>
<label for='first_name'>First Name:</label>
  <input type='text',  name='first_name'/><br/>
<label for='last_name'>Last Name:</label>
  <input type='text',  name='last_name'/><br/>
  <select name='province'>
    <%= options_from_collection_for_select(all_provinces, 'id', 'name') %>
  </select><br/>
<label for='Address'>Address:</label>
  <input type='text',  name='address'/><br/>
  <label for='city'>City:</label>
  <input type='text',  name='city'/><br/>
    <input type='submit',  value='Submit'/><br/>
  <% end %>
</div>