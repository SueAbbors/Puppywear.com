<div class="product">
  <h3><%= link_to product.title, product %></h3>
  
 <p><strong>Price:</strong> <%= number_to_currency product.price %></p> 
 
  <div><%= product.description %></div>
  
  <% if product.image_filename.present? %>
    <p><%= image_tag product.image_filename, width: 300 %></p>
  <% end %>
  
  <p>
    <%= link_to 'edit', edit_product_path(product) %>
    <%= link_to 'delete', product, method: :delete, confirm: 'Are you sure you want to delete this product?' %>
  </p>
</div>